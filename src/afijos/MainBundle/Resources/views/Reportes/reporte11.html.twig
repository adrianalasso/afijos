<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE pdf SYSTEM "%resources%/dtd/doctype.dtd">
<pdf>
    <dynamic-page>
        <div class="page-content">    
            <div class="page-header position-relative">
                <div class="row-fluid">
                    <div class="span12">
                        <div class="well well-small">
                            <table>
                                <tr>
                                    <td width="80%">
                                        <h1>C E N E L   E P </h1>
                                        <h2>Reporte de Valores en libros de los bienes depreciados hasta la fecha {{fecha|date('d/m/Y')}}</h2>                                    
                                    </td>
                                    <td>
                                        <div>{{ "now"|date("d/m/Y", "America/Guayaquil") }}</div>
                                        <div>{{ "now"|date( " H:i:s","America/Guayaquil") }}</div>
                                        <div>{{ app.user.apellidos ~' '~app.user.nombres }}</div>
                                    </td>
                                </tr>
                            </table>
                        </div>    
                    </div>
                </div>
            </div><!--/.page-header-->
            <div height="20px"></div>
            <div class="row-fluid">
                <div class="span12">
                    <div class="space-10"></div>
                    <!--PAGE CONTENT BEGINS-->   
                    {%if entities%}
                    <table  id="sample-table-2" class="table table-striped table-bordered table-hover">
                            <tr>
                                <td width="6%">Código</td>
                                <td width="19%">Descripción</td>
                                <td width="19%">Responsable</td>
                                <td width="10%">Nº de Documento</td>
                                <td width="10%">Fecha de Documento</td>
                                <td width="9%">Marca</td>
                                <td width="8%">Serie</td>
                                <td width="6%">Estado</td>
                                <td width="12%">Depreciación Acumulada</td>
                            </tr>
                            {% for entity in entities %}
                                <tr>
                                    <td>{{ entity.bienesCustodio.codigo }}</td>
                                    <td>{{ entity.bienesCustodio.descripcion }}</td>
                                    <td>{{ entity.bienesCustodio.trabajador}}</td>
                                    <td>{{ entity.bienesCustodio.numeroDocumento}}</td>
                                    <td>{{ entity.bienesCustodio.fechAdquisicion|date('d/m/Y')}}</td>
                                    <td>{{ entity.bienesCustodio.marca }}</td>
                                    <td>{{ entity.bienesCustodio.serie }}</td>
                                    <td>{{ entity.bienesCustodio.estado }}</td>
                                    <td>-{{ entity.deprecAcumulada}}</td>
                                </tr>
                            {% endfor %}
                    </table>
                    {%endif%}
                    <!--PAGE CONTENT ENDS-->
                </div><!--/.span-->
            </div><!--/.row-fluid-->
        </div><!--/.page-content-->
    </dynamic-page>
</pdf>
