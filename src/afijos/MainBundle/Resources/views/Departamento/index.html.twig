{% extends "MainBundle::index.html.twig" %}
{% block titulo %}Departamentos{%endblock%}
{%block mapatitulo%}Departamentos{%endblock%}
{%block pagetitulo%}Departamentos{%endblock%}
{%block link%}href="{{ path('departamento_new') }}"{%endblock%}
{%block tabla%}
<table id="sample-table-2" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>Código</th>
            <th>Dirección</th>
            <th>Descripción</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
{% for entity in entities %}
        <tr>
            <td class="center"><a href="{{ path('departamento_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.subsistema }}</td>
            <td>{{ entity.descripcion }}</td>
            <td class="td-actions">
                <div class="hidden-phone visible-desktop action-buttons">
                    <a class="blue" href="{{ path('departamento_show', { 'id': entity.id }) }}">
                        <i class="icon-zoom-in bigger-150"></i>
                    </a>
                    <a class="green" href="{{ path('departamento_edit', { 'id': entity.id }) }}">
                        <i class="icon-pencil bigger-150"></i>
                    </a>
                    <a class="red" href="#" id="bteliminar{{entity.id}}">
                        <i class="icon-trash bigger-150"></i>
                    </a>
                </div>
            </td>
        </tr>
{% endfor %}
    </tbody>
</table>
{%endblock%}

{%block plugins%}
{{parent()}}
{%endblock%}

{%block scripthijo%}
<script type="text/javascript">
window.onload = function(){
    var elemento=document.getElementById("mndepartamentos");
    elemento.classList.add('active');
    elemento.parentNode.parentNode.classList.add('active');
    elemento.parentNode.parentNode.classList.add('open');
};
$(function() {    
    {% for entity in entities %}
    $("#bteliminar{{entity.id}}").on(ace.click_event, function() {
            bootbox.confirm("Estas seguro de eliminar registro?", function(result) {
                if(result){
                    location.href="{{ path('departamento_eliminar', { 'id': entity.id }) }}";
                }
            });
    });
    {% endfor %}
});
$(function() {var oTable1 = $('#sample-table-2').dataTable( {"aoColumns": [null,null, null,{ "bSortable": false }]} );});
</script>
{%endblock%}
