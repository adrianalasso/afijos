{% extends '::base.html.twig' %}

{% block titulo %}Usuarios{%endblock%}

{% block mapasitio%}
<div class="breadcrumbs" id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="icon-home home-icon"></i>
            <a href="{{path('usuario_index')}}">Inicio</a>
            <span class="divider"><i class="icon-angle-right arrow-icon"></i></span>
        </li>
        <li>
            {%block entidad%}
            <i class="icon-user user-icon"></i>
            <a href="#">Usuarios</a>
            {%endblock%}
            <span class="divider"><i class="icon-angle-right arrow-icon"></i></span>
        </li>        
        <li class="active">{%block mapatitulo%}Editar Perfil{%endblock%}</li>             
    </ul><!--.breadcrumb-->
</div>
{%endblock%}

{% block pagecontent%}
<div class="page-content">
    <div class="row-fluid">
        <div class="span6">            
            <!--PAGE CONTENT BEGINS-->
            <div class="widget-box">
                <div class="widget-header">
                        <h4>{%block pagetitulo%}Usuarios{%endblock%}
                            <small><i class="icon-double-angle-right"></i> 
                            {%block pagedetalle%}Editar Perfil{%endblock%}</small>
                        </h4>        
                </div>

                <div class="widget-body">
                        <div class="widget-main">
                            <div class="form-horizontal">
                                {%block formulario%}
                                 <form action="{{ path('usuario_updatepass', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
                                    {%endblock%}
                                    <div class="control-group">
                                        <label class="control-label" for="">Contraseña Nueva</label>
                                        <div class="controls">
                                                {{ form_widget(edit_form.password) }}
                                        </div>
                                    </div>        
                                     <div class="control-group">
                                        <label class="control-label" for="">Confirmar Contraseña</label>
                                        <div class="controls">
                                            <input type="password" id="pass"/>
                                        </div>
                                    </div>        
                                    {{ form_rest(edit_form) }}
                                      <div class="well well-small"> 
                                        <div class="center">
                                            <button class="btn btn-small btn-success" type="submit">
                                                <i class="icon-save bigger-150"></i>
                                                        Actualizar
                                            </button>
                                            {%block link%}
                                            <a href="{{path('usuario_perfil', { 'id': entity.id })}}"  
                                            {%endblock%}
                                                class="btn btn-grey btn-small">
                                               <i class="icon-undo bigger-150"></i>
                                               Regresar
                                           </a>
                                        </div>
                                    </div>                                         
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            <!--PAGE CONTENT ENDS-->            
        </div><!--/.span-->
    </div><!--/.row-fluid-->
</div><!--/.page-content-->
{%endblock%}
{%block plugins%}{%endblock%}

{%block script%}
{{parent()}}
<script language="javascript">
$(document).ready(function(){    
        $("#usuario_pass_type_password").get(0).type = 'password';
});
</script>
{%block scripthijo%}

{%endblock%}
{%endblock%}



