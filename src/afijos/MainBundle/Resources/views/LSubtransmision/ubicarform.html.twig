{% extends '::base.html.twig' %}

{% block titulo %}Reporte de Activos{%endblock%}

{%block pluginstyle%}
<link rel="stylesheet" href="{{asset('bundles/ace/assets/css/chosen.css')}}" />
{%endblock%}

{% block mapasitio%}
<div class="breadcrumbs" id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="icon-home home-icon"></i>
            <a href="{{path('usuario_index')}}">Inicio</a>
            <span class="divider"><i class="icon-angle-right arrow-icon"></i></span>
        </li>
        <li class="active">Reporte de ubicación del activo</li>
    </ul><!--.breadcrumb-->
</div>
{%endblock%}

{% block pagecontent%}
<div class="page-content">
    <div class="row-fluid">
        <div class="span6">            
            <!--PAGE CONTENT BEGINS-->
            <div class="widget-box">
                <div class="widget-header">
                        <h4>{%block pagetitulo%}Reporte de Activos{%endblock%}
                            <small><i class="icon-double-angle-right"></i> {%block pagedetalle%}Reporte de ubicación del activo{%endblock%}</small>
                        </h4>        
                </div>
                <div class="widget-body">
                    <div class="widget-main">
                        <form action="#" method="post" {{ form_enctype(form) }} class='form-horizontal'>
                            <div class="form-horizontal">
                                    <div class="control-group">
                                        <label class="control-label" for="">Activo</label>
                                        <div class="controls">
                                            {{ form_widget(form.lsubtransmision, {'attr' :  {'class' : 'chzn-select input-large', 'data-placeholder':'Escoja una opcion..'}}) }}
                                        </div>
                                    </div>
                                    <div class="well well-small"> 
                                        <div class="center">
                                            <a class="btn btn-small btn-pink " id="btaceptar" target="_blank">
                                                <i class="icon-search bigger-150"></i>Ubicar
                                            </a>
                                            <a class="btn btn-small btn-purple " id="bthistorial" target="_blank">
                                                <i class="icon-search bigger-150"></i>Historial de Depreciaciones
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>          
            
            <!--PAGE CONTENT ENDS-->
        </div><!--/.span-->
    </div><!--/.row-fluid-->
    <div id="contenido">                
    </div>
</div><!--/.page-content-->
{%endblock%}

{%block plugins%}
<script src="{{asset('bundles/ace/assets/js/chosen.jquery.min.js')}}"></script>
<script src="{{asset('bundles/ace/assets/js/bootbox.min.js')}}"></script>
{%endblock%}

{%block script%}
{{parent()}}
<script type="text/javascript">
jQuery(document).ready(function() {
    var elemento=document.getElementById("mnlsubtransubicarform");
    elemento.classList.add('active');
    elemento.parentNode.parentNode.classList.add('active');
    elemento.parentNode.parentNode.classList.add('open');      
    $(".chzn-select").chosen(); 
});
function mensaje(){
    bootbox.dialog("Debe escoger un activo", [{
                    "label" : "Aceptar",
                    "class" : "btn-small btn-success",
                    "callback": function() {}
                }]
            );
}
$("#btaceptar").click(function(){    
    var actv = $('#ubicarlst_type_lsubtransmision').val();
    if(actv!=""){
        var url="{{ path('lsubtransmision_ubicar' , {'id': 'id'})}}";
        url = url.replace('id', actv);
        window.open(url,'_blank');
    }
    else{
            mensaje();
        }
});
$("#bthistorial").click(function(){    
    var actv = $('#ubicarlst_type_lsubtransmision').val();
    if(actv!=""){
        var url="{{ path('lsubtransmision_historialdeprec' , {'id': 'id'})}}";
        url = url.replace('id', actv);
        window.open(url,'_blank');
    }
    else{
            mensaje();
        }
});
</script>
{%endblock%}